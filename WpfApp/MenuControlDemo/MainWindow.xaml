<Window x:Class="MenuControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuControlDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New">
                    <MenuItem Header="Project..." Click="MenuItem_Click">
                         <MenuItem.Icon>
                            <Image Source="https://static.vecteezy.com/system/resources/previews/000/568/432/original/menu-icon-vector.jpg"></Image>
                         </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="File..."></MenuItem>
                   
                </MenuItem>
                <MenuItem Header="Open"></MenuItem>
                <MenuItem Header="Clone Repository"></MenuItem>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
